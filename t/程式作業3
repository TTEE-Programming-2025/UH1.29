}

int verify_password() {
    char input[10]; // æä¾›è¶³å¤ ç©ºé–“é¿å…æº¢ä½
    int tries = 0;

    while (tries < 3) {
        printf("Enter the 4-digit password: ");
        scanf("%9s", input); // å®‰å…¨è®€å–æœ€å¤š9å€‹å­—å…ƒï¼Œé¿å…ç·©è¡å€æº¢ä½

        if (strcmp(input, PASSWORD) == 0) {
            printf("Password correct. Welcome!\n\n");
            return 1; // æˆåŠŸ
        } else {
            tries++;
            if (tries < 3)
                printf("Incorrect password. You have %d attempt(s) left.\n", 3 - tries);
        }
    }

    printf("Too many incorrect attempts. Access denied.\n\n");
    return 0; // å¤±æ•—
}


void display_menu() {
    printf("----[Booking System]----\n");
    printf("a. Available seats\n");
    printf("b. Arrange for you\n");
    printf("c. Choose by yourself\n");
    printf("d. Exit\n");
    printf("------------------------\n");
}

void display_seats(char seats[ROWS][COLS]) {
    printf("\n     Seat Layout\n");
    printf("   ");
    for (int i = 0; i < COLS; i++) {
        printf("%2d", i + 1); // æ›´æ•´é½Šåœ°é¡¯ç¤ºæ¬„ç·¨è™Ÿ
    }
    printf("\n");

    for (int i = 0; i < ROWS; i++) {
        printf("R%-2d", ROWS - i); // é¡¯ç¤ºåˆ—ç·¨è™Ÿ (R9, R8, ..., R1)
        for (int j = 0; j < COLS; j++) {
            printf(" %c", seats[i][j]); // é¡¯ç¤ºåº§ä½ç‹€æ…‹ï¼Œé æœŸç‚º 'O' æˆ– 'X'
        }
        printf("\n");
    }
    printf("\nLegend: O = Available, X = Booked\n\n");
}

extern void display_seats(char seats[ROWS][COLS]); // å‡è¨­ display_seats å·²å®šç¾©

void arrange_seats(char seats[ROWS][COLS]) {
    int num_seats;

    printf("Enter the number of seats needed (1-4): ");
    scanf("%d", &num_seats);

    if (num_seats < 1 || num_seats > 4) {
        printf("âŒ Invalid number of seats.\n");
        return;
    }

    int found = 0;

    // === è™•ç† 1~4 å€‹é€£çºŒåº§ä½ ===
    for (int i = 0; i < ROWS && !found; i++) {
        for (int j = 0; j <= COLS - num_seats; j++) {
            int available = 1;
            for (int k = 0; k < num_seats; k++) {
                if (seats[i][j + k] != '-') {
                    available = 0;
                    break;
                }
            }
            if (available) {
                // æ¨™è¨˜å€™é¸åº§ä½ç‚º '@'
                for (int k = 0; k < num_seats; k++) {
                    seats[i][j + k] = '@';
                }
                found = 1;
                break;
            }
        }
    }

    if (found) {
        display_seats(seats);
        char choice;
        printf("âœ… Suggested seats marked as '@'\n");
        printf("Are you satisfied with the arrangement? (y/n): ");
        scanf(" %c", &choice);

        if (choice == 'y' || choice == 'Y') {
            for (int i = 0; i < ROWS; i++) {
                for (int j = 0; j < COLS; j++) {
                    if (seats[i][j] == '@') {
                        seats[i][j] = '*'; // ç¢ºèªè¨‚ä½
                    }
                }
            }
            printf("ğŸ‰ Seats successfully booked!\n\n");
        } else {
            for (int i = 0; i < ROWS; i++) {
                for (int j = 0; j < COLS; j++) {
                    if (seats[i][j] == '@') {
                        seats[i][j] = '-'; // å–æ¶ˆå»ºè­°
                    }
                }
            }
            printf("â„¹ï¸  Arrangement cancelled.\n\n");
        }
    } else {
        printf("âŒ No suitable seats found.\n\n");
    }
}

    if (found) {
        display_seats(seats);
        char choice;
        printf("\nSatisfied with the arrangement? (y/n): ");
        scanf(" %c", &choice);

        if (choice == 'y') {
            // Update seats to '*'
            for (int i = 0; i < ROWS; i++) {
                for (int j = 0; j < COLS; j++) {
                    if (seats[i][j] == '@') {
                        seats[i][j] = '*';
                    }
                }
            }
            printf("Seats booked.\n");
        } else {
            // Clear '@' marks
            for (int i = 0; i < ROWS; i++) {
                for (int j = 0; j < COLS; j++) {
                    if (seats[i][j] == '@') {
                        seats[i][j] = '-';
                    }
                }
            }
            printf("Arrangement cancelled.\n");
        }
    } else {
        printf("No suitable seats found.\n");
    }
}

extern void display_seats(char seats[ROWS][COLS]);

void choose_seats(char seats[ROWS][COLS]) {
    int row, col;
    char input[10];

    printf("Enter seat choices (e.g., 3-4). One at a time.\n");
    printf("Type 'done' when finished.\n\n");

    while (1) {
        printf("Enter seat (or 'done'): ");
        scanf("%9s", input);

        if (strcmp(input, "done") == 0 || strcmp(input, "DONE") == 0) {
            break;
        }

        if (sscanf(input, "%d-%d", &row, &col) != 2) {
            printf("âŒ Invalid format. Use row-col (e.g., 2-5).\n");
            continue;
        }

        if (row < 1 || row > ROWS || col < 1 || col > COLS) {
            printf("âŒ Row must be 1â€“%d and column 1â€“%d.\n", ROWS, COLS);
            continue;
        }

        int r = ROWS - row; // Flip row index
        int c = col - 1;    // Convert to 0-based column

        if (seats[r][c] != '-') {
            printf("âŒ Seat %d-%d is already taken.\n", row, col);
        } else {
            seats[r][c] = '@';
            printf("âœ… Seat %d-%d selected.\n", row, col);
        }
    }

    display_seats(seats);

    printf("\nConfirm seat selection (y/n)? ");
    char confirm;
    scanf(" %c", &confirm);

    if (confirm == 'y' || confirm == 'Y') {
        for (int i = 0; i < ROWS; i++) {
            for (int j = 0; j < COLS; j++) {
                if (seats[i][j] == '@') {
                    seats[i][j] = '*';
                }
            }
        }
        printf("ğŸ‰ Seats booked successfully.\n");
    } else {
        for (int i = 0; i < ROWS; i++) {
            for (int j = 0; j < COLS; j++) {
                if (seats[i][j] == '@') {
                    seats[i][j] = '-';
                }
            }
        }
        printf("â„¹ï¸  Selection cancelled.\n");
    }
}

int exit_program() {
    char choice;

    printf("\nDo you want to exit the program? (y/n): ");
    scanf(" %c", &choice);

    if (choice == 'y' || choice == 'Y') {
        printf("Exiting program. Goodbye!\n");
        return 1; // å›å‚³ 1 è¡¨ç¤ºè¦çµæŸç¨‹å¼
    } else if (choice == 'n' || choice == 'N') {
        printf(" Returning to menu...\n");
        return 0; // å›å‚³ 0 è¡¨ç¤ºç¹¼çºŒåŸ·è¡Œ
    } else {
        printf("  Invalid input. Please enter 'y' or 'n'. Returning to menu...\n");
        return 0;
    }
}

void clear_screen() {
#ifdef _WIN32
    system("cls");   // For Windows
#else
    system("clear"); // For Linux/macOS
#endif
}
